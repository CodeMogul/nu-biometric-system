<Window x:Class="NUBiometricEnrolment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NU Enrolment" Height="350" Width="525"
        Loaded="Window_Loaded"
        BorderBrush="AntiqueWhite"
        >
    <Window.Background>
        <ImageBrush ImageSource="image/Background.jpg" />
    </Window.Background>
    <Grid>
        <TextBlock x:Name="ConnStatusBlock" HorizontalAlignment="Left" Margin="10,288,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="497" FontWeight="Bold"/>
        <Button x:Name="Enroll" Content="Start Enroll" HorizontalAlignment="Left" Margin="207,197,0,0" VerticalAlignment="Top" Width="102" RenderTransformOrigin="0.496,-0.154" Click="Enroll_Click"/>
        <TextBlock x:Name="StatusBox" HorizontalAlignment="Left" Margin="176,235,0,0" TextWrapping="Wrap" Text="Click the Button to Begin!" VerticalAlignment="Top" Height="22" Width="166" Foreground="White" TextAlignment="Center"/>
        <TextBox x:Name="Enrolment_Number" HorizontalAlignment="Left" Height="23" Margin="196,157,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Enrolment Number :" HorizontalAlignment="Left" Margin="197,126,0,0" VerticalAlignment="Top" Foreground="White"/>

    </Grid>
</Window>
